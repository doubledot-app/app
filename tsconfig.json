{
  "include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      // Modules
      "@Home/*": ["app/modules/Home/*"],
      "@Error/*": ["app/modules/Error/*"],
      "@Search/*": ["app/modules/Search/*"],
      "@Profile/*": ["app/modules/Profile/*"],
      "@Activity/*": ["app/modules/Activity/*"],

      // Common
      "@Router": ["app/router"],
      "@Utils/*": ["app/utils/*"],
      "@Hooks/*": ["app/hooks/*"],
      "@Routes/*": ["app/routes/*"],
      "@Components/*": ["app/components/*"],
      "@RouterTypes/*": [".react-router/types/app/+types/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
